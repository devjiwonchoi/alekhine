{
  "name": "equine",
  "version": "0.2.0",
  "description": "Minimal Lichess Client for Node",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "bunchee",
    "clean": "rm -rf dist",
    "dev": "cd ./docs && pnpm dev",
    "test": "dotenv -e .env jest"
  },
  "devDependencies": {
    "@swc/core": "^1.3.94",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.7",
    "@types/node-fetch": "2.6.8",
    "bunchee": "^3.9.0",
    "dotenv-cli": "^7.3.0",
    "jest": "^29.7.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    },
    "testEnvironment": "node",
    "testTimeout": 10000,
    "verbose": true,
    "testPathIgnorePatterns": [
      "minors.test.ts",
      "bot.test.ts"
    ]
  },
  "author": "Jiwon Choi",
  "repository": {
    "type": "git",
    "url": "https://github.com/devjiwonchoi/equine.git"
  },
  "license": "MIT",
  "keywords": [
    "chess",
    "lichess",
    "api",
    "client",
    "node"
  ],
  "engines": {
    "node": ">= 18"
  },
  "funding": "https://github.com/sponsors/devjiwonchoi"
}
